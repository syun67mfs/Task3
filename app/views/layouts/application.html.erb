<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-inverse">
	 <div class="container">
		<nav class="nav navbar-nav navbar-left" style="color: white">
      <strong>Bookers</strong>
    </nav>
    <div id="slidemenu">
      <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
        <% if user_signed_in? %>
          <li class="">
            <%= link_to user_path(current_user.id) do %>
            <i class="glyphicon glyphicon-home" aria-hidden="true">Home</i>
            <% end %>
          </li>
          <li class="">
            <%= link_to users_path do %>
            <i class="glyphicon glyphicon-user users" aria-hidden="true">User</i>
            <% end %>
          </li>
          <li class="">
            <%= link_to " Books", books_path, class:"glyphicon glyphicon-book books" %>
          </li>
          <li class="">
            <%= link_to " logout", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out" %>
          </li>
        <% else %>
          <li class="">
            <%= link_to root_path do %>
            <i class="glyphicon glyphicon-home" aria-hidden="true">Home</i>
            <% end %>
          </li>
          <li class="">
            <%= link_to home_about_path do %>
            <i class="glyphicon glyphicon-link" aria-hidden="true">About</i>
            <% end %>
          </li>
          <li class="">
            <%= link_to new_user_registration_path do %>
            <i class="glyphicon glyphicon-edit sign_up" aria-hidden="true"></i> sign up
            <% end %>
          </li>
          <li class="">
            <%= link_to new_user_session_path do %>
            <i class="glyphicon glyphicon-log-in sign_in" aria-hidden="true"></i> login
            <% end %>
          </li>
        <% end %>
      </ul>
     </div>
    </div>
   </nav>
    <%= yield %>
    
    <footer>
    <div class="container">
      <div class="row">
        <div class="col-lg-offset-9 col-lg-3">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
    </footer>

  </body>
</html>
