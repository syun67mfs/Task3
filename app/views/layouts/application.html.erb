<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

   <nav class="navbar navbar-inverse">
	<div class="container-fluid">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<div class="navbar-brand">Bookers</div>
		</div>
    <div id="slidemenu">
      <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
        <% if user_signed_in? %>
          <li class="">
            <%= link_to "Home", user_path(current_user.id), class:"glyphicon glyphicon-home" %>
          </li>
          <li class="">
            <%= link_to "Users", users_path, class:"glyphicon glyphicon-user" %>
          </li>
          <li class="">
            <%= link_to "Books", books_path(current_user.id), class:"glyphicon glyphicon-book" %>
          </li>
          <li class="">
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out" %>
          </li>
        <% else %>
          <li class="">
            <%= link_to "Home", root_path, class:"glyphicon glyphicon-home" %>
          </li>
          <li class="">
            <%= link_to "About", home_about_path, class:"glyphicon glyphicon-link" %>
          </li>
          <li class="">
            <%= link_to "Signup", new_user_registration_path, class:"glyphicon glyphicon-edit" %>
          </li>
          <li class="">
            <%= link_to "Login", new_user_session_path, class:"glyphicon glyphicon-log-in" %>
          </li>
        <% end %>
      </ul>
     </div>
    </div>
   </nav>
    <%= yield %>
  </body>
</html>
