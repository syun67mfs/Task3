<div class="container">
<div class="row">
<div class="col-lg-4">
<div class="row">

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h3><%= @user.errors.count %> error prohibited this book from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>
<h1>User info</h1>
<%= form_for(@user) do |f| %>

<div class="field">
  <%= f.label :name, "Name", class: "label" %>
  <%= f.text_field :name, class: "input" %>
</div>

<div class="field">
  <%= f.label :profile_image, "image", class: "label" %>
  <%= f.attachment_field :profile_image, class: "input" %>
</div>

<div class="field">
  <%= f.label :introduction, "Introduction", class: "label" %>
  <%= f.text_area :introduction, class: "textarea" %>
</div>

<%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>

<% end %>
</div>
</div>
</div>
</div>

