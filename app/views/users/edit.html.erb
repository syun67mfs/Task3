<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="row">
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
          </div>
        <% end %>
        <h1>User info</h1>
        <%= form_for(@user) do |f| %>
        <div class="field">
          <label>Name</label>
          <%= f.text_field :name, class: "text_field" %>
        </div>
        <div class="field">
          <label>Image</label>
            <%= f.attachment_field :profile_image, class: "attachment_field" %>
        </div>
        <div class="field">
          <label>Introduction</label>
            <%= f.text_area :introduction, class: "textarea" %>
        </div>
        <button class="btn btn-default">Update User</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

