<section class="sct-color-1 slice">
  <div class="container-fluid masonry-container">
  <div class="row">
     <%= render 'users/userinfo', {user: @user, book: @book} %>
<div class="col-sm-6">
  <h1>Books</h1>
  <table class="table">
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to "#{book.title}", book_path(params[:id]) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </table>
  </div>
</div>
</div>
</section>