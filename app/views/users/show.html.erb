<div class="container">
  <div class="row">
    <div class="col-xs-3">
     <%= render 'users/userinfo', {user: @user, book: @book} %>
  <div class="col-xs-9">
    <h1>Books</h1>
    <div class="table-responsive">
      <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, size: '60x60', format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td>
            <%= link_to book_path(book) do %>
            <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tbody>
      </table>
  </div>
  </div>
  </div>
  </div>
  </div>
</div>