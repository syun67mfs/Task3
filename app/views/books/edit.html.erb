<section class="slice slice-lg sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <% if @book.errors.any? %>
          <%= @book.errors.count %>error
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= form_for(@book) do |f| %>
        <div class="form-group has-icon">
          <label class="control-label sr-only">Title</label>
          <%= f.text_field :title, class:"form_control title", placeholder:"title" %>
          <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
        </div>
        <div class="form-group has-icon">
          <label class="control-label sr-only">Opinion</label>
          <%= f.text_field :opinion, class:"form_control opinion", placeholder:"opinion" %>
        </div>
        <%= f.submit "Edit", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
        <% end %>
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</section>