<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h2>errors prohibited this book from being saved:</h2>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
          </div>
        <% end %>
        <%=form_for(@book) do |f| %>
        <div class="field">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class:"col-xs-12 bool-title" %>
        </div>
        <div class="field">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class:"col-xs-12" %>
        </div>
        <div class="action">
          <%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
        </div>
        <% end %>

        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
